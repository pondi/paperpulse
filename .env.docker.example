# Docker environment configuration for PaperPulse
# Copy this file to .env and update with your values

# Application
APP_NAME=PaperPulse
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_DOMAIN=your-domain.com

# Database (using Docker service names)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=paperpulse
DB_USERNAME=paperpulse
DB_PASSWORD=changeme_db_password

# Redis (using Docker service names)
REDIS_HOST=redis
REDIS_PASSWORD=changeme_redis_password
REDIS_PORT=6379

# Cache and Sessions
CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Meilisearch
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=changeme_meilisearch_master_key
MEILISEARCH_ENV=production

# AWS Services (for Textract OCR)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-s3-bucket

# OpenAI (for receipt parsing)
OPENAI_API_KEY=your_openai_api_key

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=your_mail_username
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@paperpulse.app
MAIL_FROM_NAME="${APP_NAME}"

# PulseDav Integration
PULSEDAV_AUTH_ENABLED=true
AWS_S3_INCOMING_PREFIX=incoming/

# Caddy ACME Email (for Let's Encrypt)
ACME_EMAIL=admin@your-domain.com

# Laravel specific
BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=local
SESSION_LIFETIME=120

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Development overrides (uncomment for local development)
# APP_ENV=local
# APP_DEBUG=true
# MAIL_HOST=mailpit
# MAIL_PORT=1025